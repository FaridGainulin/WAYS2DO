.reasons-section
  background-image: url('../images/reasons-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fefefe

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 107px 0 117px

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 30px
    +above($breakpoints.md)
      padding 20px 0 40px
    +above($breakpoints.xxl)
      padding 28px 0 56px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 140px
    background-color #33CC66
    color: #fff
    border: 2px solid #fff
    border-radius: 8px
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 10px
    +above($breakpoints.sm)
      gap: 14px
      border-radius: 12px
      width 358px !important
      padding 20px 5px
    +above($breakpoints.md)
      gap: 18px
      border-radius: 14px
      width: 473px !important;
      height: 174px
      padding 25px 5px
    +above($breakpoints.xxl)
      gap: 22px
      border-radius: 16px
      width 580px !important
      height: 198px
      padding 30px 5px 26px

  &__text
    padding 0 0 15px
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 60px 0 25px
    +above($breakpoints.xxl)
      padding 107px 0 33px

  &__btn
    width 280px !important
    margin 0 auto
    +above($breakpoints.sm)
      width 160px !important
    +above($breakpoints.md)
      width 197px !important
    +above($breakpoints.xxl)
      width 238px !important
