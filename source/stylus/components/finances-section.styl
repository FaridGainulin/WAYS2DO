.finances-section
  background-image: url('../images/finances-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fefefe

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 30px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 135px 0 107px

  &__title,
  &__sub-title,
  &__text
    text-align: center

  &__sub-title
    padding 5px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 30px
    +above($breakpoints.md)
      padding 20px 0 50px
    +above($breakpoints.xxl)
      padding 28px 0 64px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px

  &__card
    position relative
    width 280px !important
    background-color #fff
    border: 1px solid #2FD767
    display: flex
    flex-direction: column
    align-items: center
    border-radius: 10px
    padding 15px 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      align-items: flex-start
      border-radius: 15px
      width 235px !important
      padding 40px 5px 15px 15px
    +above($breakpoints.md)
      border-radius: 20px
      width: 308px !important;
      padding 50px 5px 20px 20px
    +above($breakpoints.xxl)
      border-radius: 24px
      width 377px !important
      height: 194px
      padding 71px 5px 24px 24px

  &__card-icon
    position: absolute
    border-radius: 50%
    box-shadow: 0px 4px 7px 0px rgba(0, 0, 0, 0.1)
    object-fit: cover
    width 25px
    height: 25px
    top: 5px
    right: 5px
    +above($breakpoints.sm)
      width: 35px;
      height: 35px;
      top: 8px;
      right: 9px;
    +above($breakpoints.md)
      width: 45px;
      height: 45px;
      top: 12px;
      right: 14px;
    +above($breakpoints.xxl)
      width 55px
      height: 55px
      top: 18px
      right: 19px

  &__text
    padding 0 0 15px
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 40px 0 30px
    +above($breakpoints.xxl)
      padding 53px 0 42px

  &__bottom
    position relative
    width 100%
    background-color #33CC66
    color: #fff
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    border-radius: 10px
    padding 15px 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      gap: 20px
      align-items: flex-start
      width max-content
      margin 0 auto
      border-radius: 15px
      padding 30px 20px
    +above($breakpoints.md)
      gap: 25px
      border-radius: 20px
      padding 35px 25px
    +above($breakpoints.xxl)
      gap: 32px
      width 790px
      height: 191px
      padding 40px 30px

  &__bottom-logo
    position: absolute
    width: 50px;
    height: 50px
    top: 0
    right: 0
    transform: translate(50%, -80%);
    +above($breakpoints.sm)
      transform: translate(50%, -42%);
      width: 70px;
      height: 70px
    +above($breakpoints.md)
      width: 90px;
      height: 90px
    +above($breakpoints.xxl)
      width 116px
      height: 116px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 160px !important
      +above($breakpoints.md)
        width 197px !important
      +above($breakpoints.xxl)
        width 238px !important
