.header
  &__container
    display: flex
    justify-content space-between
    align-items: center

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.sm)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px

  &__logo
    width 60px
    height: 60px
    +above($breakpoints.sm)
      width 70px
      height: 70px
    +above($breakpoints.md)
      width 90px
      height: 90px
    +above($breakpoints.xxl)
      width 107px
      height: 107px

  &__brand
    display: none
    +above($breakpoints.sm)
      border-left: 1px solid #fff
      display: flex
      flex-direction: column
      padding-left 15px
      margin-bottom 3px
    +above($breakpoints.sm)
      padding-left 20px
      margin-bottom 4px
    +above($breakpoints.xxl)
      margin-bottom 5px
      padding-left 21px

  &__connection
    position relative
    display: flex
    align-items: center
    justify-content center
    cursor pointer
    border-radius: 5px
    transition transform 0.5s, top 0.8s
    background: #fff
    color: #33CC66
    width 150px
    height: 35px
    +above($breakpoints.sm)
      background: linear-gradient(90deg, #2fd767 0%, #2ad063 100%);
      color: #fff
      height: 40px
      border-radius: 6px
      margin-bottom 3px
    +above($breakpoints.md)
      width 180px
      height: 45px
      border-radius: 8px
      margin-bottom 4px
    +above($breakpoints.xxl)
      width 203px
      height: 50px
      margin-bottom 5px
      border-radius: 10px
    &:hover
      transform: scale(1.02)
    &:active
      top: 3px
